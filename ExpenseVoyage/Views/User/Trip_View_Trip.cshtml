@model IEnumerable<ExpenseVoyage.Models.Trips>

@{
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<div class="breadcumb-wrapper" data-bg-src="@Url.Content("~/asset/img/normal/breadcumb-bg.jpg")">
    <div class="container">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Trip Booking</h1>
            <ul class="breadcumb-menu">
                <li><a asp-action="Index">Home</a></li>
                <li>Contact Us</li>
            </ul>
        </div>
    </div>
</div>

<div class="space-extra2-top space-extra2-bottom">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Your Trips</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Trip Name</th>
                            <th>Destination</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Budget</th>
                            <th>Remaining_Budget</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var trip in Model)
                            {
                                <tr>
                                    <td>@trip.trip_name</td>
                                    <td>@trip.Destination</td>
                                    <td>@trip.start_Date.ToString("d")</td>
                                    <td>@trip.end_Date.ToString("d")</td>
                                    <td>@trip.Budget</td>
                                    <td>@trip.Remaining_Budget</td>
                                    <td>
                                        <a asp-action="Edit_Trip" asp-route-id="@trip.id" class="btn btn-primary">Edit</a>
                                        <a asp-action="Delete_Trip" asp-route-id="@trip.id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">No trips found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
