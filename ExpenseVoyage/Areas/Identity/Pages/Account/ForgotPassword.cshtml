@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="justify-content-center">@ViewData[""]</h1>

<hr />
<div class="d-flex justify-content-center mt-20">
    <div class="col-md-4">
        <section>
           <form method="post">
                <h2>Forget Password</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Email" class="form-control" placeholder=" Enter Your Email" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <div class="mt-2">
                        <button type="submit" class="w-75 th-btn style3 mt-2">Reset Password</button>
                    </div>
                </div>
                </form>
        </section>
    </div>
</div>
            <h2 class="justify-content-center"></h2>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
